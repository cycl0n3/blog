<% comments.each do |comment| %>
    <div>
      <h3>
        <%= comment.name %> &lt;<%= comment.email %>&gt; said:
        <span class='actions'>
          <%= link_to 'Delete',
                      # article_comment_path(:article_id => @article, :id => comment),
                      [@article, comment],
                      data: { confirm: 'Are you sure?' },
                      method: :delete %>
        </span>
      </h3>
      <%= comment.body %>
    </div>
<% end %>
